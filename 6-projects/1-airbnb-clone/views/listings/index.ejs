<% layout("/layouts/boilerplate.ejs") -%>

<body>
  <h3>All listings</h3>
  <!-- <form action="/listings/new" method="get">
    <button type="submit">Create New Listing</button>
  </form> -->

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let listings of allListings) { %>
    <a href="/listings/<%=listings._id%>" class="listing-links">
      <div class="card col">
        <img
          src="<%= listings.image%>"
          class="card-img-top"
          alt="listing_image"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <h5 class="card-title"><%= listings.title%></h5>
          <p class="card-text">
            &#8377; <%= listings.price.toLocaleString("en-IN") %> / Night
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>
